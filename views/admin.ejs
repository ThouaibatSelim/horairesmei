<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Horaires</title>
  <link rel="stylesheet" href="/admin.css">

</head>

<body>
  <h1>Horaires d'ouverture</h1>
  
  <table>
    <thead>
      <tr>
        <th>Jour</th>
        <th>Type</th>
        <th>Ouverture</th>
        <th>Fermeture</th>
        <th>Commentaire</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% horaires.forEach(h => { %>
        <tr>
          <td><%= h.jour %></td>
          <td><%= h.type %></td>
          <td><%= h.ouverture || '-' %></td>
          <td><%= h.fermeture || '-' %></td>
          <td><%= h.commentaire || '-' %></td>
          <td>
            <a href="/admin/edit/<%= h.id %>" class="button edit">Modifier</a>
            <a href="/admin/delete/<%= h.id %>" class="button delete">Supprimer</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
