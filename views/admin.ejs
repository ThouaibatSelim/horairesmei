<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Horaires</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f9f9f9;
      color: #333;
      padding: 30px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: auto;
      background: white;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
    }

    th {
      background-color: #f0f0f0;
    }

    a.button {
      padding: 5px 10px;
      text-decoration: none;
      border-radius: 4px;
      color: white;
      font-size: 13px;
    }

    .edit {
      background-color: #3498db;
    }

    .delete {
      background-color: #e74c3c;
    }
  </style>
</head>
<body>
  <h1>Interface d'administration</h1>

  <table>
    <thead>
      <tr>
        <th>Jour</th>
        <th>Type</th>
        <th>Ouverture</th>
        <th>Fermeture</th>
        <th>Commentaire</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% horaires.forEach(h => { %>
        <tr>
          <td><%= h.jour %></td>
          <td><%= h.type %></td>
          <td><%= h.ouverture || '-' %></td>
          <td><%= h.fermeture || '-' %></td>
          <td><%= h.commentaire || '-' %></td>
          <td>
            <a href="/admin/edit/<%= h.id %>" class="button edit">Modifier</a>
            <a href="/admin/delete/<%= h.id %>" class="button delete">Supprimer</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
